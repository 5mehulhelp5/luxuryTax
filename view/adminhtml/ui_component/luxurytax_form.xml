<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
      name="luxurytax_form">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">luxurytax_form.luxurytax_form_data_source</item>
            <item name="deps" xsi:type="string">luxurytax_form.luxurytax_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Luxury Tax</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <buttons>
            <button name="save" class="Andriy\LuxuryTax\Block\Adminhtml\Item\SaveButton"/>
            <button name="delete" class="Andriy\LuxuryTax\Block\Adminhtml\Item\DeleteButton"/>
            <button name="back" class="Andriy\LuxuryTax\Block\Adminhtml\Item\Edit\BackButton"/>
        </buttons>
        <namespace>luxurytax_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>luxurytax_form.luxurytax_form_data_source</dep>
        </deps>
    </settings>

    <dataSource name="luxurytax_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Andriy\LuxuryTax\Model\Entry\DataProvider</argument>
            <argument name="name" xsi:type="string">luxurytax_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="luxurytax/index/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="luxurytax/index/save"/>
        </settings>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">General</label>
        </settings>

        <!-- Status як select -->
        <field name="status" formElement="select" sortOrder="10">
            <settings>
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
                <dataType>number</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <!-- Стандартний Yes/No -->
                        <options class="Magento\Config\Model\Config\Source\Yesno"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="name" formElement="input" sortOrder="20">
            <settings>
                <label translate="true">Name</label>
                <dataScope>name</dataScope>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="description" formElement="textarea" sortOrder="30">
            <settings>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
                <dataType>text</dataType>
            </settings>
        </field>

        <!-- Customer groups -->
        <field name="customer_group_id" formElement="select" sortOrder="40">
            <settings>
                <label translate="true">Customer Groups</label>
                <dataScope>customer_group_id</dataScope>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <!-- Правильне джерело опцій -->
                        <options class="Magento\Customer\Model\Config\Source\Group"/>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="condition_amount" formElement="input" sortOrder="50">
            <settings>
                <label translate="true">Condition Amount</label>
                <dataScope>condition_amount</dataScope>
                <dataType>text</dataType>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="tax_rate" formElement="input" sortOrder="60">
            <settings>
                <label translate="true">Tax Rate %</label>
                <dataScope>tax_rate</dataScope>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
